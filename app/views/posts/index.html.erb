<h1 class="title">Show all posts for a specific user</h1>
<div class="all-post-container">
    <%= render partial: 'users/user', locals: { user: @user } %>
    <div class="posts-container">
        <% @posts.each do |post|%>
            <div class="post-comments-container">
                <%= render partial: 'posts/post', locals: { post: post } %>
                <div class="comments-container">
                    <% post.five_recent_comments_post.each do |comment| %>
                        <p class="post-comment"><%= comment.user.name %>: <%= comment.text %></p>
                    <%end%>
                </div>
            </div>
        <%end%>
    </div>
    <div class = "post-see-all-btn-container">
        <% if @user == current_user %>
            <%= link_to "Add New Post", new_user_post_path(@user), class: "add-new-post-btn" %>
        <% end %>
        <button class="see-all-post-btn">Pagination</button>
    </div>
</div>